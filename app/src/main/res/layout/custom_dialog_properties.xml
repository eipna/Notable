<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/wordCountProperty"
        android:text="Word Count: 420"
        android:layout_marginTop="16dp"
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_invert"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/dateCreatedProperty"
        android:text="Date Created: October 03 2024"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/primary_invert"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/lastUpdatedProperty"
        android:text="Last Updated: October 03 2024"
        android:textSize="13dp"
        android:textColor="@color/primary_invert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>