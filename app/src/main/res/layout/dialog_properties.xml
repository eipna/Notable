<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/notePropertiesDateCreated"
        android:text="Date Created: October 03 2024"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="?attr/colorPrimaryInverse"
        android:layout_marginBottom="8dp"
        android:paddingStart="24dp"
        android:paddingEnd="16dp"/>

    <TextView
        android:id="@+id/notePropertiesLastUpdated"
        android:text="Last Updated: October 03 2024"
        android:paddingStart="24dp"
        android:paddingEnd="16dp"
        android:textColor="?attr/colorPrimaryInverse"
        android:fontFamily="sans-serif-medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>