<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Notable" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Changes color of status bar -->
        <item name="colorPrimary">@color/ghost_white</item>

        <!-- Custom inverted color theme -->
        <item name="colorPrimaryInverse">@color/dark_grey</item>

        <!-- Changes color of preference category title text -->
        <item name="colorAccent">@color/dark_grey</item>

        <!-- Sets a custom theme for the overflow button -->
        <item name="actionOverflowButtonStyle">@style/OverFlowButtonStyle</item>
    </style>

    <style name="Theme.Notable" parent="Base.Theme.Notable" >
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Custom theme for popup menus -->
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="popupMenuBackground">@drawable/popup_menu</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <!-- Custom theme/color for kebab/more options icon -->
    <style name="OverFlowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/dark_grey</item>
    </style>

    <!-- Custom style for collapsed toolbar -->
    <style name="CollapsedToolbarStyle">
        <item name="android:textSize">37sp</item>
    </style>

    <!-- Custom global colors -->
    <color name="primary">@color/ghost_white</color>
    <color name="primary_invert">@color/dark_grey</color>
</resources>