<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Notable" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ghost_white</item>
        <item name="colorPrimaryInverse">@color/dark_grey</item>
    </style>

    <style name="Theme.Notable" parent="Base.Theme.Notable" >
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CreateNote">
        <item name="backgroundTint">@color/dark_grey</item>
        <item name="tint">@color/pure_white</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="popupMenuBackground">@drawable/popup_menu_light</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>
</resources>