<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Notable" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_invert</item>
        <item name="colorPrimaryContainer">#3E3E3E</item>
        <item name="colorAccent">@color/dark_grey</item>
        <item name="windowActionModeOverlay">true</item>

        <!-- Changes color of status bar -->
        <item name="android:statusBarColor">@color/primary</item>

        <!-- Sets a custom theme for the overflow button -->
        <item name="actionOverflowButtonStyle">@style/OverFlowButtonStyle</item>

        <!-- Sets a the icon for the home as up button in toolbar -->
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back</item>
    </style>

    <style name="Theme.Notable" parent="Base.Theme.Notable" >
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Custom theme for popup menus -->
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="popupMenuBackground">@drawable/bg_popup_menu</item>
        <item name="android:textColor">@color/popup_menu_text</item>
    </style>

    <!-- Custom theme/color for kebab/more options icon -->
    <style name="OverFlowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/primary_invert</item>
    </style>

    <!-- Custom configuration for recycler views -->
    <style name="RecyclerStyle">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <!-- Style for buttons -->
    <style name="ButtonStyle">
        <item name="android:backgroundTint">#424242</item>
        <item name="tint">#F1F1F1</item>
    </style>

    <!-- Custom global colors -->
    <color name="primary">@color/ghost_white</color>
    <color name="primary_invert">@color/dark_grey</color>

    <color name="popup_menu_bg">#ECECEC</color>
    <color name="popup_menu_text">#2E2E2E</color>
</resources>