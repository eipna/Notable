<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="Appearance">

        <ListPreference
            android:key="list_theme"
            app:title="Theme"
            android:layout="@layout/layout_preference"
            app:summary="Change between light mode or dark mode or follow the current system theme"
            android:entries="@array/preference_list_theme"
            android:entryValues="@array/preference_list_theme_values"
            app:icon="@drawable/sun"/>

        <ListPreference
            android:key="list_display"
            android:title="Display Style"
            app:icon="@drawable/note"
            android:layout="@layout/layout_preference"
            android:entries="@array/preference_list_display"
            android:entryValues="@array/preference_list_display_values"
            app:summary="Choose how your notes are displayed"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:title="Backup">

        <Preference
            android:key="prefs_import"
            app:title="Import Notes"
            android:icon="@drawable/backup_import"
            android:layout="@layout/layout_preference"/>

        <Preference
            android:key="prefs_export"
            app:title="Export Notes"
            android:icon="@drawable/backup_export"
            android:layout="@layout/layout_preference"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:title="About">

        <Preference
            app:title="Github"
            app:summary="eipna"
            app:icon="@drawable/link"
            android:layout="@layout/layout_preference">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/link_github"/>
        </Preference>

        <Preference
            android:key="prefs_libraries"
            android:title="Libraries"
            android:icon="@drawable/link"
            android:layout="@layout/layout_preference"/>

        <Preference
            android:key="prefs_version"
            app:title="Version"
            app:summary="@string/app_version"
            app:icon="@drawable/info"
            android:layout="@layout/layout_preference"/>
    </PreferenceCategory>

</PreferenceScreen>